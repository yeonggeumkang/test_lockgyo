html
    head
        title 개인정보수정 | LOCKGYO
        link(rel='stylesheet', href='/assets/style/style.css')
    body        
        div.navbar_container
            div.navbar
                ul.navbar_logo
                    li  
                        a(href='/main')
                            img.img_navbar_logo(src="/assets/image/img_logo.png")
                ul.navbar_menu
                    li
                        a(href='/main').btn_navbar HOME
                        &nbsp;&nbsp;
                    li
                        a(href='/notice').btn_navbar 공지사항
                        &nbsp;&nbsp;
                    li
                        a(href='/mypage').btn_navbar 마이페이지
                        &nbsp; &nbsp;
                    li
                        if privilege === 1
                            a(href='/admin').btn_navbar 관리자페이지
                            &nbsp; &nbsp;
                    li
                        a(href='/logout').btn_navbar 로그아웃
        div.container
              h1 개인정보 수정
              form(name="개인정보수정", method="post")
                  div.input email
                      br
                      input(type="text", name="email", value=email)
                      br

                  div.input 이름
                      br
                      input(type="text", name="name", placeholder=name)

                  div.input 학번
                      br
                      input(type='text', name="student_id", placeholder=studentID)

                  div.input 연락처
                      br
                      input(type='text', name="phone_number", placeholder=phone_number)

                  div.actions
                      br
                      input(type="submit", value="수정", name="수정", placeholder="수정")
              br
              //마이페이지에서 바로 변경할때는 이 버튼 이용.
              input(type='button', value='비밀번호변경', onclick="location.href='/mypage/editpw'")
