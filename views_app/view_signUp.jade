html
    head
      link(rel='stylesheet', href='style.css')
    body
        h1 회원가입
        div.container
          div.login_box
            form(name="회원가입", method="post")
              
              div.inner_login_box
                  email 입력
                  br
                  input(type="text", name="email", placeholder="email")
                  br
                  비밀번호
                  br
                  input(type="password", name="password",placeholder="password")
                  br
                  비밀번호 확인
                  br
                  input(type="password", name="password2",placeholder="password2")
                  br
                  이름
                  br
                  input(type="text", name="name", placeholder="name")
                  br
                  학번
                  br
                  input(type='text', name="student_id", placeholder='10자리 학번을 입력하세요.')

                  br
                  연락처
                  br
                  input(type='text', name="phone_number", placeholder="01012345678 형태로 입력하세요.")
                  br
              div.button
                  input(type="submit", value="회원가입", name="회원가입", placeholder="회원가입")
