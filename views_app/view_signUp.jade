html
    head
        link(rel='stylesheet', href='style.css')
    body
        div.container
            ul.navbar
              a(href='/main') HOME
              &nbsp;&nbsp;
            
              a(href='/notice') 공지사항
              &nbsp;&nbsp;
            
              a(href='/mypage') 마이페이지
              &nbsp; &nbsp;
           
              if privilege === 1
                a(href='/admin') 관리자페이지
                &nbsp; &nbsp;

              a(href='/logout') 로그아웃
              h1 회원가입

                form(name="회원가입", method="post")

                  div.inner_login_box
                      이메일 입력
                      br
                      input.A(type="text", name="email", placeholder="email")
                      br
                      비밀번호
                      br
                      input.A(type="password", name="password",placeholder="비밀번호")
                      br
                      비밀번호 확인
                      br
                      input.A(type="password", name="password2",placeholder="비밀번호 확인")
                      br
                      이름
                      br
                      input.A(type="text", name="name", placeholder="이름")
                      br
                      학번
                      br
                      input.A(type='text', name="student_id", placeholder='10자리 학번을 입력하세요.')

                      br
                      연락처
                      br
                      input.A(type='text', name="phone_number", placeholder="01012345678 형태로 입력하세요.")
                      br
                      div.button
                          input(type="submit", value="회원가입", name="회원가입", placeholder="회원가입")
