html
  head
    title 마이페이지 | LOCKGYO
    link(rel='stylesheet', href='/assets/style/style.css')
    link(rel='stylesheet', href='/assets/style/design_mypage.css')
    link(rel='icon', href='/assets/image/tab.png', type='image/x-icon')
  body
     div.navbar_container
            div.navbar
                ul.navbar_logo
                    li  
                        a(href='/main')
                            img.img_navbar_logo(src="/assets/image/img_logo.png")
                ul.navbar_menu
                    li
                        a(href='/main').btn_navbar HOME
                        &nbsp;&nbsp;
                    li
                        a(href='/notice').btn_navbar 공지사항
                        &nbsp;&nbsp;
                    li
                        a(href='/mypage').btn_navbar 마이페이지
                        &nbsp; &nbsp;
                    li
                        if privilege === 1
                            a(href='/admin').btn_navbar 관리자페이지
                            &nbsp; &nbsp;
                    li
                        a(href='/logout').btn_navbar 로그아웃
    div.container
        table.board
            thead
                tr
                    td(colspan="2") 사용자 정보
            tbody
                tr
                    td(width="40%") 이름
                    td(width="60%")= name
                tr
                    td(width="40%") 이메일(ID)
                    td(width="60%")= email
                tr
                    td(width="40%") 학번
                    td(width="60%")= studentID
                tr
                    td(width="40%") 휴대폰
                    td(width="60%")= phone_number
                        
        p
            a(href='/mypage/edit').btn_mypage 개인정보 수정
        p
            a(href='/mypage/quit' id='btn_delete').btn_mypage 회원탈퇴
        script
            | var element = document.getElementById('btn_delete');
            | element.onclick = function() {var result = confirm("정말 탈퇴하시겠습니까?");};
