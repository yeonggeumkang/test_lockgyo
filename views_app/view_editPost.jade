doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            | 수정하기
        form(action='/notice/edit?id='+post.id method='post')
            p
                input(type='text' name='title' value=post.title placeholder='제목')
            p
                textarea(name='description' placeholder='내용')
                    =post.description
            p
                input(type='text' name='author' value=post.author placeholder='작성자')    
            p
                input(type='submit')
                